<UserControl x:Class="WPFPrismServiceApp.Views.DialogViews.WarningDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" prism:ViewModelLocator.AutoWireViewModel="True" Background="Transparent">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding CloseDialogCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers> 
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ui:SymbolIcon Symbol="Warning12" FontSize="64" Foreground="Red" />
        <TextBlock Margin="10 0,30,0"  Grid.Column="1" Text="{Binding Message}"  VerticalAlignment="Center"   FontSize="16" FontFamily="Open Sans" TextWrapping="Wrap"/>
    </Grid>
</UserControl>