<Window x:Class="WPFPrismServiceApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/" xmlns:effects="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}"   WindowStartupLocation="CenterScreen" 
        Loaded="Window_Loaded"
        ResizeMode="CanResize"
        MinHeight="768" MinWidth="1024" WindowStyle="None" AllowsTransparency="True"
        Style="{StaticResource {x:Type Window}}">

    <Grid>
        <ContentControl HorizontalAlignment="Left" VerticalAlignment="Top"
        prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Window>
