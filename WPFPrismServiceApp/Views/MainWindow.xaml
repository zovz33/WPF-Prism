<Window x:Class="WPFPrismServiceApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/" xmlns:effects="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" WindowStartupLocation="CenterScreen" 
        Loaded="Window_Loaded"
        ResizeMode="CanResize"
        WindowStyle="None" AllowsTransparency="True"
        Style="{StaticResource {x:Type Window}}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ContentControl 
        prism:RegionManager.RegionName="NavigationRegion" Grid.Column="0"/>
        <ContentControl HorizontalAlignment="Left" VerticalAlignment="Stretch" 
        prism:RegionManager.RegionName="ContentRegion" Grid.Column="1"/>
    </Grid>
</Window>
