<UserControl x:Class="WPFPrismServiceApp.Views.NavigationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFPrismServiceApp.Views" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:conveter="clr-namespace:WPFPrism.Infrastructure.Converters;assembly=WPFPrism.Infrastructure">
    <UserControl.Resources>
        <conveter:BoolToVisibilityConverter x:Key="boolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>

        <Grid x:Name="NavigationBar" Width="150"  HorizontalAlignment="Center" VerticalAlignment="Stretch">
 
            <Separator  Grid.RowSpan="2" Background="#202020"  Width="1" Height="Auto" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            <StackPanel Grid.Row="0"  Grid.Column="0" Height="Auto" Width="Auto" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="Transparent">
                <StackPanel x:Name="NavJourn" Margin="0 5 0 0" Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <ui:Button Margin="0 0 0 0" Width="40" HorizontalAlignment="Left"
                    Command="{Binding GoBackCommand}" Visibility="{Binding IsCanExcute,Converter={StaticResource boolToVisibilityConverter}}"
                    Icon="ArrowLeft48" Appearance="Primary" />
                    <ui:Button Margin="5 0 0 0" Width="40" HorizontalAlignment="Right"
                    Command="{Binding ClearJournal}" Visibility="{Binding IsCanExcute,Converter={StaticResource boolToVisibilityConverter}}"
                    Icon="ArrowCounterclockwise24" Appearance="Primary" />
                    <ui:Button Margin="5 0 0 0" Width="40" HorizontalAlignment="Right"
                    Command="{Binding GoForwardCommand}" Visibility="{Binding IsCanExcute,Converter={StaticResource boolToVisibilityConverter}}"
                    Icon="ArrowRight48" Appearance="Primary" />
                </StackPanel>

                <ui:Button Icon="Home32" Margin="5" Width="120" Height="Auto" HorizontalAlignment="Center" 
            Command="{Binding NavigationCommand}"
            CommandParameter="Home" 
            Content="Главная" />
                <ui:Button Icon="Search48"  Margin="5" Width="120" Height="Auto" HorizontalAlignment="Center" 
            Command="{Binding NavigationCommand}"
            CommandParameter="Service"
            Content="Услуги" />
                <ui:Button Icon="Layer24" Margin="5" Width="120" Height="Auto" HorizontalAlignment="Center" 
            Command="{Binding NavigationCommand}"
            CommandParameter="Manage"
            Content="Управление" />
                <ui:Button Icon="DataHistogram24" Margin="5" Width="120" Height="Auto" HorizontalAlignment="Center" 
            Command="{Binding NavigationCommand}"
            CommandParameter="Analytics"
            Content="Аналитика" />

            </StackPanel>
            <StackPanel Grid.Row="1" x:Name="BottomNavbar" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <ui:Button Margin="5" Width="120" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Bottom"
            Command="{Binding NavigationCommand}" Appearance="Secondary"  
            CommandParameter="Auth"
            Content="Авторизация"/>
            <ui:Button Margin="5" Width="120" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Bottom"
            Command="{Binding NavigationCommand}" Appearance="Transparent"
            CommandParameter="Registr"
            Content="Регистрация" BorderThickness="0"/>
                
                <ui:Button Margin="5"  HorizontalAlignment="Left" VerticalAlignment="Bottom"
            Command="{Binding Logout}" Icon="ArrowExit20" FontSize="20" 
            Background="Transparent" BorderThickness="0"/>
            </StackPanel>
        </Grid> 
    </Grid>
</UserControl>
