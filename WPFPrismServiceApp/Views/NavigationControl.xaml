<UserControl x:Class="WPFPrismServiceApp.Views.NavigationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFPrismServiceApp.Views" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
             mc:Ignorable="d" 
             Height="auto" Width="auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid x:Name="NavigationBar" Height="Auto" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Separator  Background="#202020" Height="1500" Width="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="0" Height="Auto" Width="Auto" VerticalAlignment="Top" HorizontalAlignment="Center" Background="Transparent">
                <ui:Button Margin="5 5 0 0" Width="40" HorizontalAlignment="Left"
            Command="{Binding NavigationCommand}" Icon="ArrowLeft48" Appearance="Primary"
            CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>

                <ui:Button Icon="Home32" Margin="5" Width="120" Height="Auto" HorizontalAlignment="Center" 
            Command="{Binding NavigationCommand}"
            CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"
            Content="Главная" />
                <ui:Button Icon="Search48"  Margin="5" Width="120" Height="Auto" HorizontalAlignment="Center" 
            Command="{Binding NavigationCommand}"
            CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"
            Content="Услуги" />
                <ui:Button Icon="Layer24" Margin="5" Width="120" Height="Auto" HorizontalAlignment="Center" 
            Command="{Binding NavigationCommand}"
            CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"
            Content="Управление" />
                <ui:Button Icon="DataHistogram24" Margin="5" Width="120" Height="Auto" HorizontalAlignment="Center" 
            Command="{Binding NavigationCommand}"
            CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"
            Content="Аналитика" />

            </StackPanel>
            <StackPanel x:Name="BottomNavbar" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <ui:Button Margin="5" Width="120" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Bottom"
            Command="{Binding NavigationCommand}" Appearance="Secondary"  
            CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"
            Content="Авторизация"/>
            <ui:Button Margin="5" Width="120" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Bottom"
            Command="{Binding NavigationCommand}" Appearance="Transparent"
            CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"
            Content="Регистрация" BorderThickness="0"/>
                
                <ui:Button Margin="5"  HorizontalAlignment="Left" VerticalAlignment="Bottom"
            Command="{Binding NavigationCommand}" Icon="ArrowExit20" FontSize="20"
            CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"
            Background="Transparent" BorderThickness="0"/>
            </StackPanel>
        </Grid>
        <ui:InfoBar Title="Title" Message="BindableMessage" />
    </Grid>
</UserControl>
